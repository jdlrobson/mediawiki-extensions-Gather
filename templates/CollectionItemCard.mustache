<div class="collection-card">
	{{#hasCardImage}}
	<a href="{{page.url}}">{{{cardImage}}}</a>
	{{/hasCardImage}}
	<h2 class="collection-card-title" dir="{{dir}}">
		{{#page}}
		<a href="{{url}}" class="{{#isMissing}}new{{/isMissing}}">{{displayTitle}}</a>
		{{/page}}
	</h2>
	{{#hasExtract}}
	<p class="collection-card-excerpt" dir="{{dir}}">{{extract}}</p>
	{{/hasExtract}}
	{{#isMissing}}
	<p class="collection-card-excerpt" dir="{{dir}}">{{msgMissing}}</p>
	{{/isMissing}}
	{{^isMissing}}
	<div class="collection-card-footer">
		<a href="{{page.url}}" class="{{progressiveAnchorClass}}">
			{{msg}}<span class="{{iconClass}}">
		</a>
	</div>
	{{/isMissing}}
</div>